<% provide(:title, @user.username) %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.username %>
        </h1>
        <p>
          <%= @user.introduction %>
          <%= @user.website %>
        </p>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    
      <%= link_to("お気に入り", "/users/#{@user.id}/likes") %>
    
    <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
      <% if @user.microposts.any? %>
        <h3>投稿 (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>
</div>